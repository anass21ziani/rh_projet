{% extends 'base.html.twig' %}

{% block title %}Accueil - Système RH{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        {% if app.user %}
            <div class="card">
                <div class="card-header">
                    <h1 class="mb-0">
                        <i class="fas fa-home me-2"></i>
                        Bienvenue, {{ app.user.email|split('@')[0]|title }} !
                    </h1>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Informations du compte</h4>
                            <p><strong>Email :</strong> {{ app.user.email }}</p>
                            <p><strong>Rôles :</strong> 
                                {% for role in app.user.roles %}
                                    <span class="badge bg-primary me-1">{{ role }}</span>
                                {% endfor %}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h4>Accès rapide</h4>
                            {% if 'ROLE_ADMINISTRATEUR_RH' in app.user.roles %}
                                <a href="{{ path('administrateur_rh_dashboard') }}" class="btn btn-primary me-2">
                                    <i class="fas fa-cog me-1"></i>Administrateur RH
                                </a>
                            {% endif %}
                            {% if 'ROLE_RESPONSABLE_RH' in app.user.roles %}
                                <a href="{{ path('responsable_rh_dashboard') }}" class="btn btn-success me-2">
                                    <i class="fas fa-users me-1"></i>Responsable RH
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="card">
                <div class="card-header">
                    <h1 class="mb-0">
                        <i class="fas fa-building me-2"></i>
                        Système de Gestion des Ressources Humaines
                    </h1>
                </div>
                <div class="card-body text-center">
                    <h3>Bienvenue sur notre plateforme RH</h3>
                    <p class="lead">Gérez efficacement vos ressources humaines avec notre système intégré.</p>
                    <div class="mt-4">
                        <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}