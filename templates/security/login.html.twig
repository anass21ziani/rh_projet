{% extends 'base.html.twig' %}

{% block title %}Connexion - Système RH{% endblock %}

{% block body %}
{% if app.user %}
<script>
    // Si l'utilisateur est déjà connecté, le rediriger automatiquement
    window.location.href = '{{ path('app_home') }}';
</script>
{% endif %}
<div class="login-container">
    <div class="text-center mb-4">
        <h2>Système RH</h2>
        <p class="text-muted">Connectez-vous à votre compte</p>
    </div>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post" action="{{ path('app_login') }}">
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Adresse email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="votre.email@uiass.rh">
        </div>
        
        <div class="mb-3">
            <label for="inputPassword" class="form-label">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="••••••••">
        </div>
        
        <div class="d-grid">
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-sign-in-alt me-2"></i>
                Se connecter
            </button>
        </div>
    </form>
    
    
    <div class="mt-4 p-3 bg-light rounded">
        <h6>Utilisateurs de test :</h6>
        <ul class="list-unstyled mb-0">
            <li><strong>admin@uiass.rh</strong> / password123 (ROLE_ADMINISTRATEUR_RH)</li>
            <li><strong>rh@uiass.rh</strong> / password123 (ROLE_RESPONSABLE_RH)</li>
            <li><strong>employe@uiass.rh</strong> / password123 (ROLE_EMPLOYE)</li>
        </ul>
    </div>
</div>
{% endblock %}