{% extends 'base.html.twig' %}

{% block title %}Gestion des Dossiers{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1 class="mb-0">
                    <i class="fas fa-folder me-2"></i>
                    Gestion des Dossiers
                </h1>
                <div>
                    <a href="{{ path('admin_add_dossier') }}" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Ajouter un dossier
                    </a>
                    <a href="{{ path('admin_manage_nature_contrats') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Titre</th>
                                <th>Employé</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Documents</th>
                                <th>Date de création</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for dossier in dossiers %}
                            <tr>
                                <td>{{ dossier.id }}</td>
                                <td>
                                    <strong>{{ dossier.title }}</strong>
                                </td>
                                <td>{{ dossier.employee.fullName }}</td>
                                <td>
                                    <span class="badge bg-{{ dossier.type == 'administratif' ? 'primary' : (dossier.type == 'medical' ? 'success' : (dossier.type == 'juridique' ? 'warning' : 'info')) }}">
                                        {{ dossier.type|title }}
                                    </span>
                                </td>
                                <td>
                                    {% if dossier.description %}
                                        {{ dossier.description|length > 50 ? dossier.description|slice(0, 50) ~ '...' : dossier.description }}
                                    {% else %}
                                        <em class="text-muted">Aucune description</em>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        {{ dossier.documentCount }} document(s)
                                    </span>
                                </td>
                                <td>{{ dossier.createdAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#viewModal{{ dossier.id }}">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="modal" data-bs-target="#editModal{{ dossier.id }}">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ dossier.id }}">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="8" class="text-center text-muted">Aucun dossier trouvé</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modales pour chaque dossier -->
{% for dossier in dossiers %}
<!-- Modal de visualisation -->
<div class="modal fade" id="viewModal{{ dossier.id }}" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Détails du dossier : {{ dossier.title }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Informations générales</h6>
                        <p><strong>Titre :</strong> {{ dossier.title }}</p>
                        <p><strong>Employé :</strong> {{ dossier.employee.fullName }}</p>
                        <p><strong>Type :</strong> 
                            <span class="badge bg-{{ dossier.type == 'administratif' ? 'primary' : (dossier.type == 'medical' ? 'success' : (dossier.type == 'juridique' ? 'warning' : 'info')) }}">
                                {{ dossier.type|title }}
                            </span>
                        </p>
                        <p><strong>Date de création :</strong> {{ dossier.createdAt|date('d/m/Y H:i') }}</p>
                    </div>
                    <div class="col-md-6">
                        <h6>Statistiques</h6>
                        <p><strong>Nombre de documents :</strong> {{ dossier.documentCount }}</p>
                        <p><strong>Nombre de placards :</strong> {{ dossier.placards|length }}</p>
                    </div>
                </div>
                
                {% if dossier.description %}
                <div class="row mt-3">
                    <div class="col-12">
                        <h6>Description</h6>
                        <p>{{ dossier.description }}</p>
                    </div>
                </div>
                {% endif %}

                {% if dossier.placards|length > 0 %}
                <div class="row mt-3">
                    <div class="col-12">
                        <h6>Placards</h6>
                        {% for placard in dossier.placards %}
                        <div class="alert alert-info">
                            <strong>{{ placard.name }}</strong> - 
                            <em>{{ placard.location }}</em>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}

                {% if dossier.documents|length > 0 %}
                <div class="row mt-3">
                    <div class="col-12">
                        <h6>Documents</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Référence</th>
                                        <th>Nom du fichier</th>
                                        <th>Type</th>
                                        <th>Uploadé par</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for document in dossier.documents %}
                                    <tr>
                                        <td>{{ document.reference }}</td>
                                        <td>{{ document.filename }}</td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                {{ document.fileType|split('/')[1]|upper }}
                                            </span>
                                        </td>
                                        <td>{{ document.uploadedBy }}</td>
                                        <td>{{ document.createdAt|date('d/m/Y') }}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de suppression -->
<div class="modal fade" id="deleteModal{{ dossier.id }}" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer le dossier <strong>{{ dossier.title }}</strong> ?</p>
                {% if dossier.documents|length > 0 %}
                    <div class="alert alert-warning">
                        <strong>Attention :</strong> Ce dossier contient {{ dossier.documents|length }} document(s).
                        La suppression supprimera également tous les documents associés.
                    </div>
                {% endif %}
                <p class="text-danger"><small>Cette action est irréversible.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-danger" onclick="deleteDossier({{ dossier.id }})">
                    <i class="fas fa-trash me-2"></i>Supprimer
                </button>
            </div>
        </div>
    </div>
</div>
{% endfor %}

<script>
function deleteDossier(id) {
    // Implémentation de la suppression
    console.log('Suppression du dossier ID:', id);
    // Ici vous pouvez ajouter une requête AJAX pour supprimer
}
</script>
{% endblock %}
