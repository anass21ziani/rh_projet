{% extends 'base.html.twig' %}

{% block title %}Gestion des Responsables RH{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1 class="mb-0">
                    <i class="fas fa-user-friends me-2"></i>
                    Gestion des Responsables RH
                </h1>
                <a href="{{ path('admin_add_responsable') }}" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Ajouter un Responsable RH
                </a>
            </div>
            <div class="card-body">
                {% if responsables is empty %}
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i>
                        Aucun responsable RH trouvé. 
                        <a href="{{ path('admin_add_responsable') }}" class="alert-link">Ajouter le premier responsable RH</a>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Email</th>
                                    <th>Rôles</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for responsable in responsables %}
                                <tr>
                                    <td>{{ responsable.id }}</td>
                                    <td>{{ responsable.email }}</td>
                                    <td>
                                        {% for role in responsable.roles %}
                                            <span class="badge bg-primary me-1">{{ role }}</span>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_edit_responsable', {'id': responsable.id}) }}" class="btn btn-sm btn-warning me-2">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        <a href="{{ path('admin_delete_responsable', {'id': responsable.id}) }}" 
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce responsable RH ?')">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
