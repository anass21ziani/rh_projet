{% extends 'base.html.twig' %}

{% block title %}Types de Contrats{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1 class="mb-0">
                    <i class="fas fa-file-contract me-2"></i>
                    Types de Contrats
                </h1>
                <div>
                    <a href="{{ path('admin_add_nature_contrat') }}" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Ajouter un type
                    </a>
                    <a href="{{ path('admin_manage_employees') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Libellé</th>
                                <th>Description</th>
                                <th>Date de création</th>
                                <th>Nombre de contrats</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for natureContrat in natureContrats %}
                            <tr>
                                <td>{{ natureContrat.id }}</td>
                                <td>
                                    <strong>{{ natureContrat.libelle }}</strong>
                                </td>
                                <td>{{ natureContrat.description ?? 'Aucune description' }}</td>
                                <td>{{ natureContrat.createdAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    <span class="badge bg-info">
                                        {{ natureContrat.employeeContrats|length }} contrat(s)
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#viewModal{{ natureContrat.id }}">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="modal" data-bs-target="#editModal{{ natureContrat.id }}">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ natureContrat.id }}">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted">Aucun type de contrat trouvé</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modales pour chaque type de contrat -->
{% for natureContrat in natureContrats %}
<!-- Modal de visualisation -->
<div class="modal fade" id="viewModal{{ natureContrat.id }}" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Détails du type de contrat : {{ natureContrat.libelle }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Informations générales</h6>
                        <p><strong>Libellé :</strong> {{ natureContrat.libelle }}</p>
                        <p><strong>Description :</strong> {{ natureContrat.description ?? 'Aucune description' }}</p>
                        <p><strong>Date de création :</strong> {{ natureContrat.createdAt|date('d/m/Y H:i') }}</p>
                    </div>
                    <div class="col-md-6">
                        <h6>Statistiques</h6>
                        <p><strong>Nombre de contrats :</strong> {{ natureContrat.employeeContrats|length }}</p>
                        {% set activeContrats = natureContrat.employeeContrats|filter(c => c.statut == 'actif') %}
                        <p><strong>Contrats actifs :</strong> {{ activeContrats|length }}</p>
                    </div>
                </div>
                
                {% if natureContrat.employeeContrats|length > 0 %}
                <div class="row mt-3">
                    <div class="col-12">
                        <h6>Contrats associés</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Employé</th>
                                        <th>Date de début</th>
                                        <th>Date de fin</th>
                                        <th>Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for contrat in natureContrat.employeeContrats %}
                                    <tr>
                                        <td>{{ contrat.employee.fullName }}</td>
                                        <td>{{ contrat.startDate|date('d/m/Y') }}</td>
                                        <td>{{ contrat.endDate ? contrat.endDate|date('d/m/Y') : 'Non définie' }}</td>
                                        <td>
                                            <span class="badge bg-{{ contrat.statut == 'actif' ? 'success' : (contrat.statut == 'terminé' ? 'danger' : 'warning') }}">
                                                {{ contrat.statut }}
                                            </span>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de suppression -->
<div class="modal fade" id="deleteModal{{ natureContrat.id }}" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer le type de contrat <strong>{{ natureContrat.libelle }}</strong> ?</p>
                {% if natureContrat.employeeContrats|length > 0 %}
                    <div class="alert alert-warning">
                        <strong>Attention :</strong> Ce type de contrat est utilisé par {{ natureContrat.employeeContrats|length }} contrat(s).
                        La suppression pourrait affecter ces contrats.
                    </div>
                {% endif %}
                <p class="text-danger"><small>Cette action est irréversible.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-danger" onclick="deleteNatureContrat({{ natureContrat.id }})">
                    <i class="fas fa-trash me-2"></i>Supprimer
                </button>
            </div>
        </div>
    </div>
</div>
{% endfor %}

<script>
function deleteNatureContrat(id) {
    // Implémentation de la suppression
    console.log('Suppression du type de contrat ID:', id);
    // Ici vous pouvez ajouter une requête AJAX pour supprimer
}
</script>
{% endblock %}
