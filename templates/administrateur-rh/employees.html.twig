{% extends 'base.html.twig' %}

{% block title %}Gestion des Employés{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1 class="mb-0">
                    <i class="fas fa-user-tie me-2"></i>
                    Gestion des Employés
                </h1>
                <a href="{{ path('admin_manage_responsables') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom complet</th>
                                <th>Email</th>
                                <th>Téléphone</th>
                                <th>Poste</th>
                                <th>Département</th>
                                <th>Date d'embauche</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for employee in employees %}
                            <tr>
                                <td>{{ employee.id }}</td>
                                <td>{{ employee.fullName }}</td>
                                <td>{{ employee.email }}</td>
                                <td>{{ employee.phone ?? 'N/A' }}</td>
                                <td>{{ employee.position }}</td>
                                <td>{{ employee.department }}</td>
                                <td>{{ employee.hireDate|date('d/m/Y') }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#viewModal{{ employee.id }}">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="modal" data-bs-target="#editModal{{ employee.id }}">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ employee.id }}">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="8" class="text-center text-muted">Aucun employé trouvé</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modales pour chaque employé -->
{% for employee in employees %}
<!-- Modal de visualisation -->
<div class="modal fade" id="viewModal{{ employee.id }}" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Détails de {{ employee.fullName }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Informations personnelles</h6>
                        <p><strong>Nom :</strong> {{ employee.fullName }}</p>
                        <p><strong>Email :</strong> {{ employee.email }}</p>
                        <p><strong>Téléphone :</strong> {{ employee.phone ?? 'N/A' }}</p>
                    </div>
                    <div class="col-md-6">
                        <h6>Informations professionnelles</h6>
                        <p><strong>Poste :</strong> {{ employee.position }}</p>
                        <p><strong>Département :</strong> {{ employee.department }}</p>
                        <p><strong>Date d'embauche :</strong> {{ employee.hireDate|date('d/m/Y') }}</p>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <h6>Contrats</h6>
                        {% if employee.employeeContrats|length > 0 %}
                            {% for contrat in employee.employeeContrats %}
                            <div class="alert alert-info">
                                <strong>{{ contrat.natureContrat.libelle }}</strong> - 
                                Du {{ contrat.startDate|date('d/m/Y') }}
                                {% if contrat.endDate %}
                                    au {{ contrat.endDate|date('d/m/Y') }}
                                {% endif %}
                                <span class="badge bg-{{ contrat.statut == 'actif' ? 'success' : 'secondary' }}">
                                    {{ contrat.statut }}
                                </span>
                            </div>
                            {% endfor %}
                        {% else %}
                            <p class="text-muted">Aucun contrat trouvé</p>
                        {% endif %}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <h6>Dossiers</h6>
                        {% if employee.dossiers|length > 0 %}
                            {% for dossier in employee.dossiers %}
                            <div class="alert alert-warning">
                                <strong>{{ dossier.title }}</strong> - 
                                <em>{{ dossier.type }}</em>
                                <br>
                                <small>{{ dossier.description }}</small>
                            </div>
                            {% endfor %}
                        {% else %}
                            <p class="text-muted">Aucun dossier trouvé</p>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de suppression -->
<div class="modal fade" id="deleteModal{{ employee.id }}" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer l'employé <strong>{{ employee.fullName }}</strong> ?</p>
                <p class="text-danger"><small>Cette action est irréversible.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <a href="{{ path('admin_delete_responsable', {'id': employee.id}) }}" class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Supprimer
                </a>
            </div>
        </div>
    </div>
</div>
{% endfor %}
{% endblock %}
