{% extends 'base.html.twig' %}

{% block title %}Détails Organisation - {{ organisation.dossierDesignation }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-sitemap me-2"></i>
                {{ organisation.dossierDesignation }}
            </h1>
            <p class="text-muted mb-0">Détails de l'organisation</p>
        </div>
        <div>
            <a href="{{ path('responsable_edit_organisation', {'id': organisation.id}) }}" class="btn btn-warning me-2">
                <i class="fas fa-edit me-2"></i>Modifier
            </a>
            <a href="{{ path('responsable_manage_organisations') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Organisation Details -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>
                        Informations Générales
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Code :</label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-primary">{{ organisation.code }}</span>
                                </p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">DAS :</label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-info">{{ organisation.das }}</span>
                                </p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Groupement :</label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-secondary">{{ organisation.groupement }}</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Dossier :</label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-warning">{{ organisation.dossier }}</span>
                                </p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Division d'Activités Stratégiques :</label>
                                <p class="form-control-plaintext">{{ organisation.divisionActivitesStrategiques }}</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Désignation :</label>
                                <p class="form-control-plaintext">
                                    <strong>{{ organisation.dossierDesignation }}</strong>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-bar me-2"></i>
                        Statistiques
                    </h6>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-tie fa-3x text-primary mb-2"></i>
                        <h4 class="text-primary">{{ organisation.organisationEmployeeContrats|length }}</h4>
                        <p class="text-muted">Employé{{ organisation.organisationEmployeeContrats|length > 1 ? 's' : '' }} assigné{{ organisation.organisationEmployeeContrats|length > 1 ? 's' : '' }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Employees List -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-users me-2"></i>
                        Employés Assignés
                    </h6>
                </div>
                <div class="card-body">
                    {% if organisation.organisationEmployeeContrats is empty %}
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            Aucun employé assigné à cette organisation.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom</th>
                                        <th>Prénom</th>
                                        <th>Email</th>
                                        <th>Contrat</th>
                                        <th>Date Début</th>
                                        <th>Date Fin</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for orgContrat in organisation.organisationEmployeeContrats %}
                                        {% set contrat = orgContrat.employeeContrat %}
                                        {% set employe = contrat.employe %}
                                        <tr>
                                            <td>{{ employe.id }}</td>
                                            <td>{{ employe.nom }}</td>
                                            <td>{{ employe.prenom }}</td>
                                            <td>{{ employe.email }}</td>
                                            <td>
                                                <span class="badge bg-primary">{{ contrat.natureContrat }}</span>
                                            </td>
                                            <td>{{ contrat.dateDebut|date('d/m/Y') }}</td>
                                            <td>
                                                {% if contrat.dateFin %}
                                                    {{ contrat.dateFin|date('d/m/Y') }}
                                                {% else %}
                                                    <span class="text-muted">En cours</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <a href="{{ path('responsable_view_employe_details', {'id': employe.id}) }}" 
                                                   class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye me-1"></i>Voir
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
