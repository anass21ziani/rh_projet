{% extends 'base_sidebar.html.twig' %}

{% block title %}Types de Documents{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Types de Documents</h1>
                <a href="{{ path('app_type_document_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nouveau Type
                </a>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <div class="card">
                <div class="card-body">
                    {% if type_documents is empty %}
                        <div class="text-center py-5">
                            <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun type de document trouvé</h5>
                            <p class="text-muted">Commencez par créer votre premier type de document.</p>
                            <a href="{{ path('app_type_document_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Créer un type de document
                            </a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nom</th>
                                        <th>Description</th>
                                        <th>Obligatoire</th>
                                        <th>Types de contrats</th>
                                        <th>Date de création</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for type_document in type_documents %}
                                        <tr>
                                            <td>
                                                <strong>{{ type_document.nom }}</strong>
                                            </td>
                                            <td>
                                                {% if type_document.description %}
                                                    {{ type_document.description|length > 50 ? type_document.description|slice(0, 50) ~ '...' : type_document.description }}
                                                {% else %}
                                                    <span class="text-muted">Aucune description</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if type_document.obligatoire %}
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-exclamation-triangle"></i> Obligatoire
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Optionnel</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if type_document.natureContrats is not empty %}
                                                    {% for nature_contrat in type_document.natureContrats %}
                                                        <span class="badge bg-info me-1">{{ nature_contrat.libelle }}</span>
                                                    {% endfor %}
                                                {% else %}
                                                    <span class="text-muted">Aucun</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {{ type_document.createdAt|date('d/m/Y H:i') }}
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_type_document_show', {'id': type_document.id}) }}" 
                                                       class="btn btn-sm btn-outline-info" title="Voir">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_type_document_edit', {'id': type_document.id}) }}" 
                                                       class="btn btn-sm btn-outline-warning" title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            onclick="confirmDelete({{ type_document.id }})" title="Supprimer">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir supprimer ce type de document ? Cette action est irréversible.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(id) {
    const form = document.getElementById('deleteForm');
    form.action = '{{ path('app_type_document_delete', {'id': '__ID__'}) }}'.replace('__ID__', id);
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    modal.show();
}
</script>
{% endblock %}
