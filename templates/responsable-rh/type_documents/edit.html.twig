{% extends 'base_sidebar.html.twig' %}

{% block title %}Modifier Type de Document{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Modifier Type de Document</h1>
                <a href="{{ path('app_type_document_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-edit"></i> Modifier "{{ type_document.nom }}"
                            </h5>
                        </div>
                        <div class="card-body">
                            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.nom) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <div class="form-check form-switch">
                                            {{ form_widget(form.obligatoire, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(form.obligatoire, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                        </div>
                                        {{ form_errors(form.obligatoire) }}
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.description) }}
                            </div>

                            <div class="mb-4">
                                {{ form_label(form.natureContrats, null, {'label_attr': {'class': 'form-label'}}) }}
                                <div class="row">
                                    {% for nature_contrat in form.natureContrats %}
                                        <div class="col-md-6 col-lg-4">
                                            <div class="form-check">
                                                {{ form_widget(nature_contrat, {'attr': {'class': 'form-check-input'}}) }}
                                                {{ form_label(nature_contrat, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                {{ form_errors(form.natureContrats) }}
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_type_document_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Annuler
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Enregistrer les modifications
                                </button>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-info-circle"></i> Informations
                            </h5>
                        </div>
                        <div class="card-body">
                            <h6>Date de création</h6>
                            <p class="text-muted">{{ type_document.createdAt|date('d/m/Y à H:i') }}</p>
                            
                            <h6>Documents associés</h6>
                            <p class="text-muted">{{ type_document.documents|length }} document(s)</p>
                            
                            {% if type_document.obligatoire %}
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <strong>Document obligatoire</strong><br>
                                    Ce type de document est marqué comme obligatoire.
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
