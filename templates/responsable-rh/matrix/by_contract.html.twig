{% extends 'base.html.twig' %}

{% block title %}Détails Contrat - {{ contractType }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-file-contract me-2"></i>
            Détails Contrat : {{ contractType }}
        </h1>
        <a href="{{ path('responsable_matrix_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la Matrice
        </a>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-table me-2"></i>
                        Documents Requis
                    </h6>
                </div>
                <div class="card-body">
                    {% if entries is empty %}
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            Aucune donnée trouvée pour ce type de contrat.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Document</th>
                                        <th class="text-center">Statut</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for entry in entries %}
                                        <tr>
                                            <td>
                                                <strong>{{ entry.documentAbbreviation }}</strong>
                                            </td>
                                            <td class="text-center">
                                                {% if entry.required %}
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-exclamation-circle me-1"></i>
                                                        Obligatoire
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-check-circle me-1"></i>
                                                        Optionnel
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <a href="{{ path('responsable_matrix_by_document', {'abbreviation': entry.documentAbbreviation}) }}" 
                                                   class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye me-1"></i>Voir Document
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="row">
        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <i class="fas fa-file-alt fa-2x text-primary mb-2"></i>
                    <h5 class="card-title">Total Documents</h5>
                    <h3 class="text-primary">{{ entries|length }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle fa-2x text-danger mb-2"></i>
                    <h5 class="card-title">Obligatoires</h5>
                    <h3 class="text-danger">
                        {% set required = entries|filter(entry => entry.required)|length %}
                        {{ required }}
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-secondary">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-2x text-secondary mb-2"></i>
                    <h5 class="card-title">Optionnels</h5>
                    <h3 class="text-secondary">
                        {% set optional = entries|filter(entry => not entry.required)|length %}
                        {{ optional }}
                    </h3>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
