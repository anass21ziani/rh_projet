{% extends 'base.html.twig' %}

{% block title %}Statistiques de la Matrice{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0 text-gray-800">
                        <i class="fas fa-chart-bar me-2"></i>Statistiques de la Matrice
                    </h1>
                    <p class="text-muted mb-0">Analyse des obligations documentaires</p>
                </div>
                <div>
                    <a href="{{ path('responsable_matrix_index') }}" class="btn btn-primary">
                        <i class="fas fa-table me-2"></i>Retour à la Matrice
                    </a>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Entrées
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ totalEntries }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-list fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Documents Obligatoires
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ requiredDocuments }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Documents Optionnels
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ optionalDocuments }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Pourcentage Obligatoire
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        {% if totalEntries > 0 %}
                                            {{ ((requiredDocuments / totalEntries) * 100)|round(1) }}%
                                        {% else %}
                                            0%
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-percentage fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Document Types -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Types de Documents ({{ documentTypes|length }})</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Abréviation</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for documentType in documentTypes %}
                                            <tr>
                                                <td>
                                                    <span class="badge bg-primary">{{ documentType }}</span>
                                                </td>
                                                <td>
                                                    <a href="{{ path('responsable_matrix_by_document', {'abbreviation': documentType}) }}" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i> Voir
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contract Types -->
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Types de Contrats ({{ contractTypes|length }})</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Type de Contrat</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for contractType in contractTypes %}
                                            <tr>
                                                <td>
                                                    <small>{{ contractType }}</small>
                                                </td>
                                                <td>
                                                    <a href="{{ path('responsable_matrix_by_contract', {'contractType': contractType}) }}" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i> Voir
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Summary -->
            <div class="row">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Résumé</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <h6>Couverture Documentaire</h6>
                                    <p class="text-muted">
                                        La matrice couvre <strong>{{ documentTypes|length }} types de documents</strong> 
                                        pour <strong>{{ contractTypes|length }} types de contrats</strong>, 
                                        soit un total de <strong>{{ totalEntries }} combinaisons</strong>.
                                    </p>
                                </div>
                                <div class="col-md-4">
                                    <h6>Obligations</h6>
                                    <p class="text-muted">
                                        <strong>{{ requiredDocuments }} documents</strong> sont marqués comme obligatoires 
                                        ({{ ((requiredDocuments / totalEntries) * 100)|round(1) }}% du total), 
                                        tandis que <strong>{{ optionalDocuments }}</strong> sont optionnels.
                                    </p>
                                </div>
                                <div class="col-md-4">
                                    <h6>Utilisation</h6>
                                    <p class="text-muted">
                                        Cette matrice permet de déterminer rapidement quels documents 
                                        sont requis pour chaque type de contrat lors de l'embauche 
                                        ou de la gestion des dossiers RH.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
