{% extends 'base_sidebar.html.twig' %}

{% block title %}Gestion des Dossiers{% endblock %}

{% block body %}
<!-- Alertes de Conformité -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-warning">
            <div class="card-body text-center">
                <i class="fas fa-exclamation-triangle fa-2x text-warning mb-2"></i>
                <h6 class="card-title">Dossiers Incomplets</h6>
                <p class="card-text text-muted">Documents manquants selon la matrice</p>
                <a href="{{ path('responsable_matrix_index') }}" class="btn btn-warning btn-sm">
                    <i class="fas fa-table me-1"></i>Vérifier Matrice
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-success">
            <div class="card-body text-center">
                <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                <h6 class="card-title">Dossiers Conformes</h6>
                <p class="card-text text-muted">Tous les documents requis présents</p>
                <a href="{{ path('responsable_manage_documents') }}" class="btn btn-success btn-sm">
                    <i class="fas fa-file-alt me-1"></i>Voir Documents
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-info">
            <div class="card-body text-center">
                <i class="fas fa-chart-pie fa-2x text-info mb-2"></i>
                <h6 class="card-title">Taux de Conformité</h6>
                <p class="card-text text-muted">Analyse globale des dossiers</p>
                <a href="{{ path('responsable_matrix_statistics') }}" class="btn btn-info btn-sm">
                    <i class="fas fa-chart-bar me-1"></i>Voir Stats
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="mb-0">
                        <i class="fas fa-folder me-2"></i>
                        Gestion des Dossiers
                    </h1>
                    <small class="text-muted">Suivi de la conformité documentaire des employés</small>
                </div>
                <div class="btn-group" role="group">
                    <a href="{{ path('responsable_matrix_index') }}" class="btn btn-info">
                        <i class="fas fa-table me-2"></i>Matrice Documentaire
                    </a>
                    <a href="{{ path('responsable_add_dossier') }}" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Ajouter un Dossier
                    </a>
                </div>
            </div>
            <div class="card-body">
                {% if dossiers is empty %}
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i>
                        Aucun dossier trouvé. 
                        <a href="{{ path('responsable_add_dossier') }}" class="alert-link">Ajouter le premier dossier</a>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Titre</th>
                                    <th>Employé</th>
                                    <th>Statut</th>
                                    <th>Placard</th>
                                    <th>Documents</th>
                                    <th>Description</th>
                                    <th>Date de Création</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for dossier in dossiers %}
                                <tr>
                                    <td>{{ dossier.id }}</td>
                                    <td>{{ dossier.nom }}</td>
                                    <td>{{ dossier.employe.prenom }} {{ dossier.employe.nom }}</td>
                                    <td>
                                        {% if dossier.status == 'completed' %}
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Complété
                                            </span>
                                        {% elseif dossier.status == 'in_progress' %}
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock me-1"></i>En cours
                                            </span>
                                        {% else %}
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-hourglass-half me-1"></i>En attente
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if dossier.placard %}
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-archive me-1"></i>
                                                {{ dossier.placard.name }}
                                            </span>
                                        {% else %}
                                            <span class="text-muted">Aucun placard</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="text-muted">Documents non liés</span>
                                    </td>
                                    <td>{{ dossier.description|length > 50 ? dossier.description|slice(0, 50) ~ '...' : dossier.description }}</td>
                                    <td>{{ dossier.createdAt|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('responsable_add_document', {'dossier_id': dossier.id}) }}" class="btn btn-sm btn-success" title="Ajouter un document">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                            <!-- Bouton "Voir les documents" supprimé car la relation dossier-document n'existe plus -->
                                            <a href="{{ path('responsable_edit_dossier', {'id': dossier.id}) }}" class="btn btn-sm btn-warning" title="Modifier le dossier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="{{ path('responsable_delete_dossier', {'id': dossier.id}) }}" 
                                               class="btn btn-sm btn-danger"
                                               title="Supprimer le dossier"
                                               onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce dossier ?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <!-- Section documents supprimée car la relation dossier-document n'existe plus -->
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
