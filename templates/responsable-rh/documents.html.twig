{% extends 'base.html.twig' %}

{% block title %}Gestion des Documents{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item active">Documents</li>
                    </ol>
                </div>
                <h4 class="page-title">Gestion des Documents</h4>
            </div>
        </div>
    </div>

    <!-- Alertes de Conformité -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle fa-2x text-warning mb-2"></i>
                    <h6 class="card-title">Documents Manquants</h6>
                    <p class="card-text text-muted">Vérifiez la conformité des dossiers</p>
                    <a href="{{ path('responsable_matrix_index') }}" class="btn btn-warning btn-sm">
                        <i class="fas fa-table me-1"></i>Voir Matrice
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h6 class="card-title">Dossiers Conformes</h6>
                    <p class="card-text text-muted">Documents à jour selon la matrice</p>
                    <a href="{{ path('responsable_manage_dossiers') }}" class="btn btn-success btn-sm">
                        <i class="fas fa-folder me-1"></i>Voir Dossiers
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-info">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-2x text-info mb-2"></i>
                    <h6 class="card-title">Statistiques</h6>
                    <p class="card-text text-muted">Analyse de la conformité</p>
                    <a href="{{ path('responsable_matrix_statistics') }}" class="btn btn-info btn-sm">
                        <i class="fas fa-chart-line me-1"></i>Voir Stats
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="card-title mb-0">Référentiel Documentaire RH</h5>
                            <small class="text-muted">Base de données des types de documents utilisés dans l'organisation</small>
                        </div>
                        <div class="col-auto">
                            <div class="btn-group" role="group">
                                <a href="{{ path('responsable_matrix_index') }}" class="btn btn-info">
                                    <i class="fas fa-table"></i> Matrice
                                </a>
                                <a href="{{ path('responsable_add_document') }}" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Nouveau Document
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Abréviation</th>
                                    <th>Libellé Complet</th>
                                    <th>Type</th>
                                    <th>Usage</th>
                                    <th>Obligatoire</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for document in documents %}
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">{{ document.abbreviation }}</span>
                                    </td>
                                    <td>{{ document.libelleComplet }}</td>
                                    <td>{{ document.typeDocument }}</td>
                                    <td>{{ document.usage }}</td>
                                    <td>
                                        <span class="badge bg-info">{{ document.abbreviation }}</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('responsable_edit_document', {'id': document.id}) }}" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="{{ path('responsable_delete_document', {'id': document.id}) }}" 
                                               class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce document ?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted">Aucun document trouvé</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}