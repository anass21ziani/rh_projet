{% extends 'base.html.twig' %}

{% block title %}Gestion des Documents{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item active">Documents</li>
                    </ol>
                </div>
                <h4 class="page-title">Gestion des Documents</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="card-title mb-0">Référentiel Documentaire RH</h5>
                        </div>
                        <div class="col-auto">
                            <a href="{{ path('responsable_add_document') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Nouveau Document
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Abréviation</th>
                                    <th>Libellé Complet</th>
                                    <th>Type</th>
                                    <th>Usage</th>
                                    <th>Obligatoire</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for document in documents %}
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">{{ document.abreviation }}</span>
                                    </td>
                                    <td>{{ document.libelleComplet }}</td>
                                    <td>{{ document.typeDocument }}</td>
                                    <td>{{ document.usage }}</td>
                                    <td>
                                        {% if document.obligatoire %}
                                            <span class="badge bg-danger">Obligatoire</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Optionnel</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('responsable_edit_document', {'id': document.id}) }}" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="{{ path('responsable_delete_document', {'id': document.id}) }}" 
                                               class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce document ?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted">Aucun document trouvé</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}