{% extends 'base.html.twig' %}

{% block title %}Gestion des Documents{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1 class="mb-0">
                    <i class="fas fa-file-alt me-2"></i>
                    Gestion des Documents
                </h1>
                <a href="{{ path('responsable_add_document') }}" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Ajouter un Document
                </a>
            </div>
            <div class="card-body">
                {% if documents is empty %}
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i>
                        Aucun document trouvé. 
                        <a href="{{ path('responsable_add_document') }}" class="alert-link">Ajouter le premier document</a>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Référence</th>
                                    <th>Nom du Fichier</th>
                                    <th>Type</th>
                                    <th>Dossier</th>
                                    <th>Uploadé par</th>
                                    <th>Date d'Upload</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for document in documents %}
                                <tr>
                                    <td>{{ document.id }}</td>
                                    <td>{{ document.reference }}</td>
                                    <td>{{ document.filename }}</td>
                                    <td>
                                        <span class="badge bg-secondary">{{ document.fileType|upper }}</span>
                                    </td>
                                    <td>{{ document.dossier.title }}</td>
                                    <td>{{ document.uploadedBy }}</td>
                                    <td>{{ document.createdAt|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <a href="{{ path('responsable_download_document', {'id': document.id}) }}" class="btn btn-sm btn-info me-2">
                                            <i class="fas fa-download"></i> Télécharger
                                        </a>
                                        <a href="{{ path('responsable_edit_document', {'id': document.id}) }}" class="btn btn-sm btn-warning me-2">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        <a href="{{ path('responsable_delete_document', {'id': document.id}) }}" 
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce document ?')">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
