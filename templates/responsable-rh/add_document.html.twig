{% extends 'base_sidebar.html.twig' %}

{% block title %}Ajouter un Document{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0">
                    <i class="fas fa-plus me-2"></i>
                    Ajouter un Document
                </h1>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.dossier, 'Dossier', {'class': 'form-label'}) }}
                            {{ form_widget(form.dossier, {'class': 'form-select'}) }}
                            {{ form_errors(form.dossier) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.typeDocument, 'Type de document', {'class': 'form-label'}) }}
                            {{ form_widget(form.typeDocument, {'class': 'form-select'}) }}
                            {{ form_errors(form.typeDocument) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.reference, 'Référence', {'class': 'form-label'}) }}
                            {{ form_widget(form.reference, {'class': 'form-control'}) }}
                            {{ form_errors(form.reference) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.filename, 'Nom du fichier', {'class': 'form-label'}) }}
                            {{ form_widget(form.filename, {'class': 'form-control'}) }}
                            {{ form_errors(form.filename) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <div class="form-check">
                                {{ form_widget(form.obligatoire, {'class': 'form-check-input'}) }}
                                {{ form_label(form.obligatoire, 'Marquer comme document obligatoire', {'class': 'form-check-label'}) }}
                                {{ form_errors(form.obligatoire) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            {{ form_label(form.file, 'Fichier', {'class': 'form-label'}) }}
                            {{ form_widget(form.file, {'class': 'form-control'}) }}
                            {{ form_errors(form.file) }}
                            <div class="form-text">
                                Formats acceptés : PDF, DOC, DOCX, JPG, PNG (Max: 10MB)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <a href="{{ path('responsable_manage_documents') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-upload me-2"></i>Uploader
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
