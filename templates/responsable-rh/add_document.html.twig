{% extends 'base_sidebar.html.twig' %}

{% block title %}Ajouter un Document{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0">
                    <i class="fas fa-plus me-2"></i>
                    Ajouter un Document
                </h1>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.abbreviation, 'Abr√©viation', {'class': 'form-label'}) }}
                            {{ form_widget(form.abbreviation, {'class': 'form-control'}) }}
                            {{ form_errors(form.abbreviation) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.libelleComplet, 'Libell√© Complet', {'class': 'form-label'}) }}
                            {{ form_widget(form.libelleComplet, {'class': 'form-control'}) }}
                            {{ form_errors(form.libelleComplet) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.typeDocument, 'Type de Document', {'class': 'form-label'}) }}
                            {{ form_widget(form.typeDocument, {'class': 'form-control'}) }}
                            {{ form_errors(form.typeDocument) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.usage, 'Usage', {'class': 'form-label'}) }}
                            {{ form_widget(form.usage, {'class': 'form-control'}) }}
                            {{ form_errors(form.usage) }}
                        </div>
                    </div>
                </div>
                
                <!-- Matrice Documentaire -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card border-info">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-table me-2"></i>
                                    üìä Matrice des Obligations Documentaires
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="text-muted mb-3">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Cette matrice vous aide √† identifier quels documents sont obligatoires ou optionnels selon le type de contrat.
                                </p>
                                
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Document</th>
                                                {% for natureContrat in natureContrats %}
                                                    <th class="text-center">{{ natureContrat.designation }}</th>
                                                {% endfor %}
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for abbreviation, contracts in matrixData %}
                                                <tr>
                                                    <td><strong>{{ abbreviation }}</strong></td>
                                                    {% for natureContrat in natureContrats %}
                                                        <td class="text-center">
                                                            {% if contracts[natureContrat.designation] is defined %}
                                                                {% if contracts[natureContrat.designation] %}
                                                                    <span class="badge bg-danger">Obligatoire</span>
                                                                {% else %}
                                                                    <span class="badge bg-secondary">Optionnel</span>
                                                                {% endif %}
                                                            {% else %}
                                                                <span class="badge bg-warning">Non d√©fini</span>
                                                            {% endif %}
                                                        </td>
                                                    {% endfor %}
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="fas fa-lightbulb me-1"></i>
                                        <strong>Conseil :</strong> V√©rifiez la matrice avant d'ajouter un document pour vous assurer de la conformit√© avec les obligations l√©gales.
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('responsable_manage_documents') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                    <div>
                        <a href="{{ path('responsable_matrix_index') }}" class="btn btn-info me-2">
                            <i class="fas fa-table me-2"></i>Voir Matrice Compl√®te
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-upload me-2"></i>Uploader
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
