{% extends 'base_sidebar.html.twig' %}

{% block title %}Gestion des Employés{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1 class="mb-0">
                    <i class="fas fa-users me-2"></i>
                    Gestion des Employés
                </h1>
                <div class="d-flex gap-2">
                    <a href="{{ path('responsable_manage_employes', {'show_all': not showAll}) }}" 
                       class="btn btn-{{ showAll ? 'primary' : 'outline-primary' }}">
                        <i class="fas fa-{{ showAll ? 'eye' : 'eye-slash' }} me-2"></i>
                        {{ showAll ? 'Voir seulement actifs' : 'Voir tous' }}
                    </a>
                    <a href="{{ path('responsable_rh_add_employe') }}" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Ajouter un Employé
                    </a>
                </div>
            </div>
            <div class="card-body">
                {% if employees is empty %}
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i>
                        Aucun employé trouvé. 
                        <a href="{{ path('responsable_rh_add_employe') }}" class="alert-link">Ajouter le premier employé</a>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Prénom</th>
                                    <th>Email</th>
                                    <th>Département</th>
                                    <th>Statut</th>
                                    <th>Statut Contrat</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for employe in employees %}
                                <tr class="{{ not employe.isActive ? 'table-secondary' : '' }}">
                                    <td>{{ employe.id }}</td>
                                    <td>{{ employe.nom }}</td>
                                    <td>{{ employe.prenom }}</td>
                                    <td>{{ employe.email }}</td>
                                <td>
                                    {% if employe.employeeContrats is not empty %}
                                        {% set orgCount = 0 %}
                                        {% for contrat in employe.employeeContrats %}
                                            {% for orgContrat in contrat.organisationEmployeeContrats %}
                                                {% if orgCount > 0 %}<br>{% endif %}
                                                <span class="badge bg-{{ loop.parent.loop.first ? 'primary' : 'info' }}">
                                                    {{ orgContrat.organisation.dossierDesignation }}
                                                </span>
                                                {% set orgCount = orgCount + 1 %}
                                            {% endfor %}
                                        {% endfor %}
                                        {% if orgCount == 0 %}
                                            <span class="text-muted">Non assigné</span>
                                        {% endif %}
                                    {% else %}
                                        <span class="text-muted">Non assigné</span>
                                    {% endif %}
                                </td>
                                    <td>
                                        {% if employe.isActive %}
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Actif
                                            </span>
                                        {% else %}
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times-circle me-1"></i>Inactif
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if employe.employeeContrats|length > 0 %}
                                            {% set dernierContrat = employe.employeeContrats|last %}
                                            {% if dernierContrat.statut == 'actif' %}
                                                <span class="badge bg-success">Actif</span>
                                            {% elseif dernierContrat.statut == 'expire' %}
                                                <span class="badge bg-danger">Expiré</span>
                                            {% elseif dernierContrat.statut == 'suspendu' %}
                                                <span class="badge bg-warning">Suspendu</span>
                                            {% else %}
                                                <span class="badge bg-secondary">{{ dernierContrat.statut }}</span>
                                            {% endif %}
                                        {% else %}
                                            <span class="badge bg-secondary">Aucun contrat</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('responsable_view_employe_details', {'id': employe.id}) }}" class="btn btn-sm btn-info" title="Voir les détails">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('responsable_toggle_employe_status', {'id': employe.id}) }}" 
                                               class="btn btn-sm btn-{{ employe.isActive ? 'warning' : 'success' }}"
                                               title="{{ employe.isActive ? 'Désactiver' : 'Activer' }} l'employé"
                                               onclick="return confirm('Êtes-vous sûr de vouloir {{ employe.isActive ? 'désactiver' : 'activer' }} cet employé ?')">
                                                <i class="fas fa-{{ employe.isActive ? 'pause' : 'play' }}"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
