{% extends 'base_sidebar.html.twig' %}

{% block title %}Modifier le Dossier{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0">
                    <i class="fas fa-edit me-2"></i>
                    Modifier le Dossier
                </h1>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.employee, 'Employ√©', {'class': 'form-label'}) }}
                            {{ form_widget(form.employee, {'class': 'form-select'}) }}
                            {{ form_errors(form.employee) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.status, 'Statut du Dossier', {'class': 'form-label'}) }}
                            {{ form_widget(form.status, {'class': 'form-select'}) }}
                            {{ form_errors(form.status) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            {{ form_label(form.title, 'Titre du Dossier', {'class': 'form-label'}) }}
                            {{ form_widget(form.title, {'class': 'form-control'}) }}
                            {{ form_errors(form.title) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.placard, 'Placard', {'class': 'form-label'}) }}
                            {{ form_widget(form.placard, {'class': 'form-select'}) }}
                            {{ form_errors(form.placard) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.description, 'Description', {'class': 'form-label'}) }}
                            {{ form_widget(form.description, {'class': 'form-control', 'rows': 4}) }}
                            {{ form_errors(form.description) }}
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <a href="{{ path('responsable_manage_dossiers') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i>Enregistrer les modifications
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
